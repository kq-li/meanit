doctype html
html
  head
    title Meanit
    base(href="/")
    link(rel="stylesheet", href="public/dist/styles.css")
  body(ng-app="meanit")
    div.navbar(ng-controller="NavCtrl")
      div.navbar-left
        a.home(href="/home") Meanit
      div.navbar-right
        a(ng-show="isLoggedIn()") Welcome, {{currentUser()}}.
        a(ng-show="isLoggedIn()", href="", ng-click="logout()") Logout
        a(ng-hide="isLoggedIn()", href="/register") Register
        a(ng-hide="isLoggedIn()", href="/login") Login
    div.content
      ui-view
    script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js")
    script(src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js")
    script(src="public/js/app.js")
